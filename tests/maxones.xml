<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE program SYSTEM "..\n-genes_0.9\config\genetic.dtd">
 
<program>
	<genetic popSize="100">
		<population/>
		<context id="context">
			<random CLASS="ch.unige.n-genes.tools.rng.MersenneTwister" seed="0"/>
		</context>
		<individual CLASS="ch.unige.n-genes.species.VectorIndividual" indSize="1000">
			<geneFactory CLASS="ch.unige.n-genes.species.booleans.BooleanGeneFactory">
				<object reference="context"/>
			</geneFactory>
			<fitness CLASS="tutorial.MaxOnesFitness"/>
		</individual>
		<pipe> 
			<mutation CLASS="ch.unige.n-genes.ops.mutation.BasicPointMutation" />
			<crossover CLASS="ch.unige.n-genes.ops.crossover.BasicOnePointCrossOver">
				<parameter NAME="politic" VALUE="RANDOM"/>
			</crossover>
		</pipe>
		<selection CLASS="ch.unige.n-genes.ops.select.KTournamentSelector"><!-- Put in pipe !? -->
			<parameter NAME="size" VALUE="5"/>
		</selection>
		<log>
			<frequencyCondition frequency="2"/>
			<endCondition/>
			<logger>
				<statistic CLASS="ch.unige.n-genes.statistics.BestStatistic"/>
				<statistic CLASS="ch.unige.n-genes.statistics.MeanStatistic"/>
				<statistic CLASS="ch.unige.n-genes.statistics.WorstStatistic"/>
				<writer CLASS="ch.unige.n-genes.tools.io.writer.DefaultWriter" console="true">
					<parameter NAME="separator" VALUE="\t"/>
				</writer>
			</logger>
		</log>
	</genetic>
</program>